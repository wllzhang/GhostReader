{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "label": "npm: watch",
      "problemMatcher": {
        "owner": "esbuild",
        "pattern": {
          "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\[watch\\] build started",
          "endsPattern": "^\\[watch\\] build finished"
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "panel": "dedicated"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "build",
      "label": "npm: build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": "build"
    },
    {
      "type": "npm",
      "script": "compile",
      "label": "npm: compile",
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      }
    },
    {
      "type": "npm",
      "script": "pretest",
      "label": "npm: pretest",
      "problemMatcher": ["$tsc", "$eslint-stylish"],
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      }
    }
  ]
}

